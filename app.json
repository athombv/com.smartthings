  "flow": {
    "actions": [
      {
        "id": "set_volume",
        "title": {
          "en": "Set the volume"
        },
        "titleFormatted": {
          "en": "Set the volume to [[volume]]"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=tv"
          },
          {
            "name": "volume",
            "type": "range",
            "title": {
              "en": "Volume"
            },
            "min": 0,
            "max": 1,
            "step": 0.01,
            "value": 50,
            "label": "%",
            "labelMultiplier": 100,
            "labelDecimals": 0
          }
        ]
      },
      {
        "id": "set_volume_mute",
        "title": {
          "en": "Mute the volume"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=tv"
          }
        ]
      },
      {
        "id": "set_volume_unmute",
        "title": {
          "en": "Unmute the volume"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=tv"
          }
        ]
      }
    ],
    "triggers": [
      {
        "id": "samsung_washer_job_finished",
        "title": {
          "en": "A washing job has finished"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=washer"
          }
        ]
      },
      {
        "id": "alarm_samsung_washer_addwash_door_open_true",
        "title": {
          "en": "Samsung AddWash door opened"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=washer&capabilities=alarm_samsung_washer_addwash_door_open"
          }
        ]
      },
      {
        "id": "alarm_samsung_washer_addwash_door_open_false",
        "title": {
          "en": "Samsung AddWash door closed"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=washer&capabilities=alarm_samsung_washer_addwash_door_open"
          }
        ]
      }
